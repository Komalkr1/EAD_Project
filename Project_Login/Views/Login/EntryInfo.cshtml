@model Project_Login.Models.Users
@*html for login page*@
<style>
    .button {
        width: 180px;
        height: 30px;
    }
    .field-validation-error {
        color: red;
        font-size: 10px;
    }
    .input-validation-error {
        border: 3px solid black;
        background-color: lightsalmon;
    }
    input {
        width: 250px;
    }

    #in2 {
        width: 220px;
    }

    .f1 {
        background-color: white;
    }

    .form-select {
        width: 130px;
    }

    #eyeIcon {
        height: 27px;
    }
</style>

<form class="text-center f1" method="post" action="/Login/EntryInfo">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <img class="img1 img-responsive center-block" src="~/css/Images/img2.jpg"> @*responsive login image*@
    </div>
    <br>
    @*Login as info*@
    <label asp-for="LoginAs">Login As:</label>
    <select asp-for="LoginAs" class="form-select">
        <option>Librarian</option>
        <option>Student</option>
    </select>
    <div> @*Username info*@
        <input asp-for="Username" placeholder="Enter Username" id="in1" class="rounded">
        
    </div><span asp-validation-for="Username"></span>
    <div> @*Password info and eye button*@
        <input asp-for="Password" type="password" placeholder="Enter 8-digit Password" id="in2" class="rounded"><button type="button" class="fa fa-eye" id="eyeIcon" onclick="showPassword('in2')"></button>       
    </div>    
    <span asp-validation-for="Password"></span><br>
    @*Button to submit login info*@
    <div><input id="button" type="submit" value="Login" class="text-center btn-info button"></div>
    <div>New student? <a href="~/Login/SignUp"><u>Click here</u></a> to Enroll</div> @*link to go to sign up page*@
</form>