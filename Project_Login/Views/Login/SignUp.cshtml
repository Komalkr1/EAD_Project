@model Project_Login.Models.Student
@*Sign up page*@
<style>
    .f1 {
        background-image: linear-gradient(to right, rgba(201, 206, 190, 1), rgba(255, 225, 201, 1));
    }
    .field-validation-error {
        color: red;
        font-size: 15px;
    }
    .input-validation-error {
        border: 3px solid black;
        background-color: lightsalmon;
    }
    input {
        width: 400px;
        height: 35px;
    }

    .form-select {
        width: 100px;
        height: 35px;
    }
    #eyeIcon {
        height: 35px;
    }
    #in4,#in5{
        width:370px;
    }
</style>

<form class="form-inline text-center f1" method="post" action="/Login/SignUp">
    <div asp-validation-summary="ModelOnly"></div>
    <div style="font-size: 30px; color:dimgray;"><u><i><b>GET ENROLLED</b></i></u></div><br>
    <div>
        <input asp-for="Name" placeholder="Enter Name" id="in1" class="rounded">

    </div>
    <span asp-validation-for="Name"></span><br>
    <label asp-for="Dept">Department:</label>
    <select asp-for="Dept" class="form-select">
        <option>BS IT</option>
        <option>BS CS</option>
        <option>BS SE</option>
    </select>
    <label asp-for="SemNo">Semester No:</label>
    <select asp-for="SemNo" class="form-select">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
        <option>6</option>
        <option>7</option>
        <option>8</option>
    </select>
    <br><br>
    <div>
        <input asp-for="PhoneNo" type="tel" placeholder="Enter Phone Number i.e. 0000-0000000" id="in3" class="rounded">

    </div>
    <span asp-validation-for="PhoneNo"></span><br>
    <div>
        <input asp-for="Password" type="password" placeholder="Enter 8-digit Password" id="in4" class="rounded"><button type="button" class="fa fa-eye" id="eyeIcon" onclick="showPassword('in4')"></button>
    </div>
    <span asp-validation-for="Password"></span><br>
    <div>
        <input asp-for="ConfirmPassword" type="password" placeholder="Re-Enter 8-digit Password" id="in5" class="rounded"><button type="button" class="fa fa-eye" id="eyeIcon" onclick="showPassword('in5')"></button>
    </div>
    <span asp-validation-for="ConfirmPassword"></span>
    <br>
    <div><input id="button" type="submit" value="Login" class="text-center btn-info button"></div><br>
    <div>Already have an Account? <a href="~/Login/EntryInfo"><u>Click here</u></a> to Login</div>
</form>
