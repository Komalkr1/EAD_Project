<style>
    /*.mt-0 {
        margin-top: 16rem !important;

    }*/
    table {
        /*margin: 45px auto;*/
        height: 100%;
        width: 100%;
        margin-bottom: 16rem;
    }

        /*tr, th, td {
        padding: 15px;
    }*/

        table tr:nth-child(odd) {
            background-image: linear-gradient(to right, rgba(201, 206, 190, 1), rgba(255, 225, 201, 1));
        }

        table tr:nth-child(even), th {
            background-color: lightgray;
        }
</style>

<div>

    <table border="0" class="mx-auto">
        <thead>
            <tr>
                <th>id</th>
                <th>Name</th>
                <th>Username</th>
                <th>Department</th>
                <th>Semester No</th>
                <th>Phone No</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Project_Login.Models.Student s in Model)
            {
                <tr>
                    <td>   @s.id       </td>
                    <td>   @s.Name       </td>
                    <td>   @s.Username       </td>
                    <td>   @s.Dept       </td>
                    <td>   @s.SemNo       </td>
                    <td>   @s.PhoneNo       </td>

                </tr>
            }
        </tbody>
    </table>
</div>
