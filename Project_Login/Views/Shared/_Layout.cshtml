<script>
    var showPswd = false;
    //function to show and hide password
    function showPassword(inpId) {

        if (showPswd == false) {
            document.getElementById(inpId).type = 'text';
            showPswd = true;
        }
        else {
            document.getElementById(inpId).type = 'password';
            showPswd = false;
        }
    }
</script>

